<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    tools:context="mx.edu.ittepic.practicau1_3_textatributos_anacarolinamondragonrangel.Practica1_3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="80dp"

        android:src="@drawable/ic_color_lens_black_24dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto Inicial"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="30sp" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_brush_black_24dp"
            android:layout_marginTop="40dp" />
    </LinearLayout>
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="50dp"
        android:hint="Escribir texto a cambiar!!"
        android:inputType="text"
        android:typeface="normal" />
    <Button
        android:id="@+id/button"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CAMBIAR COLOR Y TEXTO" />
    <Spinner
        android:layout_marginTop="20dp"
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/colores"/>

</LinearLayout>
