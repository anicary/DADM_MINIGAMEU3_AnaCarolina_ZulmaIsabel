<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fonod"
    tools:context="mx.edu.ittepic.dadm_u4_anacarolinamondragonrangel_pbd.AgregarReparacion">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/fecha"
        android:background="@drawable/ovalo1"
        android:gravity="center"
        android:hint="FECHA REPARACION"
        android:textColor="@android:color/background_light"
        android:textColorHint="#ffffff" />/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/costo"
        android:background="@drawable/ovalo1"
        android:gravity="center"
        android:hint="COSTO"
        android:textColor="@android:color/background_light"
        android:textColorHint="#ffffff" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/spinnerCliente">
        <Button
            android:id="@+id/agregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ovalo3"
            android:text="AGREGAR REPARACION"
            android:textColor="#000000" />
    </Spinner>
</LinearLayout>
