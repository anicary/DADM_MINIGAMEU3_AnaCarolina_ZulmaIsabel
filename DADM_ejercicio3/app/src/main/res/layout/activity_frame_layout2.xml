<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="mx.edu.ittepic.dadm_ejercicio3.FrameLayout2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bienvenido"
        android:layout_gravity="top|center"
        android:layout_marginTop="30dp"
        android:id="@+id/contenedor"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="240dp"
            android:layout_height="10dp"
            android:src="@drawable/linea"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido"
            android:layout_gravity="center"
            android:textColor="#FF0000"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:id="@+id/titulo"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn1"
        android:layout_gravity="bottom|left"
        android:text="SALTAR"
        android:background="@color/fondoBoton"
        android:padding="20dp"
        android:onClick="cerrar"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn2"
        android:layout_gravity="bottom|right"
        android:text="siguiente"
        android:background="@color/fondoBoton"
        android:padding="20dp"
        android:onClick="siguienteImagen"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mensaje"
        android:textColor="#000000"
        android:layout_gravity="bottom|center"
        android:text="Gracias por descargar mi aplicacion\n espero sea de tu agrado"
        android:textAlignment="center"
        android:layout_marginBottom="100dp"
        android:textSize="18dp"/>

</FrameLayout>
