<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mx.edu.ittepic.dadm_u1_ejercicio1.Ecuacion">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escriba un valor"
        android:textSize="30sp"
        android:id="@+id/etiqueta1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="mayor que 0"
        android:textSize="20sp"
        android:id="@+id/valor1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Que deseas hacer"
        android:textSize="30sp"
        android:id="@+id/etiqueta2"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/operacion1"
            android:text="Sumar"
            android:textSize="20sp"
            android:checked="true"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/operacion2"
            android:text="Dividir"
            android:textSize="20sp"
            android:checked="false"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="El otro valor"
        android:textSize="30sp"
        android:id="@+id/etiqueta3"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="mayor que 0"
        android:textSize="20sp"
        android:id="@+id/valor2"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Realizar"
        android:onClick="operacion"
        android:id="@+id/realizar"/>





</LinearLayout>
